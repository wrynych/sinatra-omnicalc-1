<!DOCTYPE html>
<html>
  <head>
    <title>Random with Form</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>
  <body>
    <form action="/random/results" method="post">
      <div>
        <label for="min_input">Minimum:</label>
        <input id="min_input" type="text" name="user_min" placeholder="E.g. 1.5">
      </div>
      <div>
        <label for="max_input">Maximum:</label>
        <input id="max_input" type="text" name="user_max" placeholder="E.g. 4.5">
      </div>
      <button type="submit">Pick random number</button>
    </form>
  </body>
</html>

